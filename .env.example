# Dremio Cloud Configuration
# Copy this file to .env and fill in your actual values

# Dremio Cloud API URL
# For US region: https://api.dremio.cloud
# For EU region: https://api.eu.dremio.cloud
# For custom/enterprise: https://api.your-org.dremio.cloud
DREMIO_CLOUD_URL=https://api.dremio.cloud

# Dremio Cloud Authentication
# Option 1: Personal Access Token (RECOMMENDED for Dremio Cloud)
# Get your PAT from: Dremio Cloud UI > Account Settings > Personal Access Tokens
DREMIO_PAT=your-personal-access-token

# Option 2: Username/Password (for on-premise Dremio or legacy)
# DREMIO_USERNAME=your-username@example.com
# DREMIO_PASSWORD=your-password

# Dremio Project ID (found in your Dremio Cloud project settings)
DREMIO_PROJECT_ID=your-project-id

# SSL/TLS Configuration
# Set to false only for testing with self-signed certificates (not recommended for production)
DREMIO_SSL_VERIFY=true
# Optional: Path to custom SSL certificate file
# DREMIO_SSL_CERT_PATH=/path/to/certificate.pem

# Flask Configuration
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# Optional: Additional configuration
# FLASK_ENV=development
